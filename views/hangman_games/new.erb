<h1>New Game</h1>

	<button class="new_game"type="button">New Game</button>

	<div class="word">
		
	</div>

	<div>
	<% @letters.each do |letter| %>
		<button><%= letter %></button>
	<% end %>
	</div>


<script>

$(function(){
	$button = $(".new_game");

	$button.on( "click", newGame );

	function newGame() {
		$.ajax({
			url: "/hangman_games/new",
			method: "POST",
			dataType: "json",
			success: function(data){
				appendWordToPage(data.word)
			}
		});
	}

	function appendWordToPage(data) {
		$(".word").append(data);
	}
});

</script>